<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_des_title"
            android:layout_margin="10dp"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />

        <EditText
            android:id="@+id/ed_des_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/security_des_ed_hint" />

        <TextView
            android:id="@+id/tv_des_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/security_des_key" />

        <TextView
            android:id="@+id/tv_des_encode_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/security_des_encode_result" />


        <Button
            android:id="@+id/btn_des_encode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_des_btn" />

        <TextView
            android:id="@+id/tv_des_decode_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/security_des_decode_result" />

        <Button
            android:id="@+id/btn_des_decode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_des_decode_result" />

        <!-- ================================================================================ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_aes_title"
            android:layout_margin="10dp"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />

        <EditText
            android:id="@+id/ed_aes_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/security_aes_ed_hint" />

        <TextView
            android:id="@+id/tv_aes_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/security_aes_key" />

        <TextView
            android:id="@+id/tv_aes_encode_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/security_aes_encode_result" />


        <Button
            android:id="@+id/btn_aes_encode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_aes_btn" />

        <TextView
            android:id="@+id/tv_aes_decode_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/security_aes_decode_result" />

        <Button
            android:id="@+id/btn_aes_decode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_aes_decode_result" />





    </LinearLayout>


</ScrollView>